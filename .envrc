function @glob {
  glob 'src/**/*.{js,ts}' --nodir --ignore 'src/**/*.test.{js,ts}' --ignore 'src/tests/**/*'
}

function @publish-dry {
  npm publish --dry-run
}

function @node20 {
  rm -rf node_modules
  volta pin node@20
  yarn install
}

function @node12 {
  volta pin node@12
  rm -rf node_modules
  yarn install
}